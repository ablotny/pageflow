<%= tag :link, :rel => "canonical", :href => pretty_entry_url(entry) %>

<%= tag :meta, :property => "og:image", :content => entry.thumbnail_url(:medium).gsub('https://', 'http://') %>

<%= tag :meta, :property => "og:title", :content => "#{entry.title}" %>
<%= tag :meta, :property => "og:description", :name => "description", :content => entry_summary(entry) %>
<%= tag :meta, :property => "og:url", :content => pretty_entry_url(entry) %>
<%= tag :meta, :property => "og:site_name", :content => entry.theming.cname_domain %>
<%= tag :meta, :property => "og:type", :content => "article" %>

<!-- Twitter Meta Tags -->
<%= tag :meta, :name => "twitter:card", :content => "summary_large_image" %>
<%= tag :meta, :name => "twitter:site", :content => "@welt" %>
<%= tag :meta, :name => "twitter:creator", :content => "@MariaMenzel1" %>
<%= tag :meta, :name => "twitter:title", :content => entry.title + " - eine Multimedia-Reportage" %>
<%= tag :meta, :name => "twitter:description", :content => entry_summary(entry) %>
<%= tag :meta, :name => "twitter:image:src", :content => entry.thumbnail_url(:medium).gsub('https://', 'http://') %>